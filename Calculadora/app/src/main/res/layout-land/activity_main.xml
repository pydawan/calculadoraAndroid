<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.brunocrivelaro.calculadora.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned|numberDecimal"
        android:ems="10"
        android:id="@+id/result"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/operation"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/button7"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textSize="24sp"
        android:text="OP"
        app:layout_constraintBaseline_toBaselineOf="@+id/button7" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned|numberDecimal"
        android:ems="10"
        android:id="@+id/newNumber"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button1"
        android:textSize="24sp"
        android:minWidth="48dip"
        app:layout_constraintRight_toLeftOf="@+id/buttonDot"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp" />

    <Button
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button1"
        android:textSize="24sp"
        android:minWidth="48dip"
        app:layout_constraintRight_toLeftOf="@+id/button2"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:textSize="24sp"
        android:minWidth="48dip"
        app:layout_constraintRight_toRightOf="@+id/button5"
        app:layout_constraintBaseline_toBaselineOf="@+id/button1" />

    <Button
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:textSize="24sp"
        android:minWidth="48dip"
        app:layout_constraintBaseline_toBaselineOf="@+id/button2"
        app:layout_constraintLeft_toLeftOf="@+id/button6" />

    <Button
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:textSize="24sp"
        android:minWidth="48dip"
        app:layout_constraintRight_toLeftOf="@+id/button5"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button7" />

    <Button
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:textSize="24sp"
        android:minWidth="48dip"
        app:layout_constraintRight_toRightOf="@+id/button8"
        app:layout_constraintBaseline_toBaselineOf="@+id/button4" />

    <Button
        android:text="6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button6"
        android:textSize="24sp"
        android:minWidth="48dip"
        app:layout_constraintLeft_toLeftOf="@+id/button9"
        app:layout_constraintBaseline_toBaselineOf="@+id/button5" />

    <Button
        android:text="7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button7"
        android:textSize="24sp"
        android:minWidth="48dip"
        app:layout_constraintLeft_toLeftOf="@+id/button4"
        app:layout_constraintRight_toRightOf="@+id/button4"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/newNumber" />

    <Button
        android:text="8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button8"
        app:layout_constraintBaseline_toBaselineOf="@+id/button7"
        android:textSize="24sp"
        android:minWidth="48dip"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp" />

    <Button
        android:text="9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button9"
        android:textSize="24sp"
        android:minWidth="48dip"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button8" />

    <Button
        android:text="/"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonDivide"
        android:textSize="24sp"
        android:minWidth="48dip"
        app:layout_constraintBaseline_toBaselineOf="@+id/button9"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/button9"
        android:layout_marginLeft="8dp" />

    <Button
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonMultiply"
        android:textSize="24sp"
        android:minWidth="48dip"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/button6"
        android:layout_marginLeft="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button6" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonMinus"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/button3"
        android:layout_marginLeft="8dp"
        android:textSize="24sp"
        android:minWidth="48dip"
        app:layout_constraintBaseline_toBaselineOf="@+id/button3" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonPlus"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/buttonEquals"
        android:layout_marginLeft="8dp"
        android:textSize="24sp"
        android:minWidth="48dip"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonEquals" />

    <Button
        android:text="."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonDot"
        android:textSize="24sp"
        android:minWidth="48dip"
        app:layout_constraintRight_toRightOf="@+id/button2"
        app:layout_constraintBaseline_toBaselineOf="@+id/button0" />

    <Button
        android:text="="
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonEquals"
        android:textSize="24sp"
        android:minWidth="48dip"
        app:layout_constraintLeft_toLeftOf="@+id/button3"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonDot" />

    <android.support.constraint.Guideline
        android:layout_width="0dp"
        android:layout_height="311dp"
        android:id="@+id/guideline"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="296dp"
        app:layout_constraintGuide_percent="0.5" />

    <Button
        android:text="NEG"
        android:layout_height="wrap_content"
        android:id="@+id/buttonNeg"
        android:minWidth="48dip"
        android:layout_width="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/buttonDivide"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/buttonDivide" />

</android.support.constraint.ConstraintLayout>
